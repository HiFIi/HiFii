<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:layout_width="fill_parent"
                android:layout_height="266dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="16.0dip"
                android:paddingBottom="16dp"
                diagonal:diagonal_angle="10"
                diagonal:diagonal_gravity="left">

                <ImageView
                    android:id="@+id/session_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/central_park" />
            </com.github.florent37.diagonallayout.DiagonalLayout>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/toolbar_actionbar_actually_transparent_margintop" />

    <!-- Nav drawer -->
    <include layout="@layout/hifii" />
</android.support.v4.widget.DrawerLayout>